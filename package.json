{
  "name": "@apso/template",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "compose": "./scripts/apso-compose.sh",
    "log": "./scripts/apso-log.sh",
    "provision": "./scripts/apso-provision.sh",
    "shutdown": "./scripts/apso-shutdown.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "schema:sync": "ts-node ./src/sync.ts",
    "typeorm": "typeorm-ts-node-esm",
    "db:create": "npm run typeorm -- migration:create ./src/migrations/$npm_config_name",
    "db:generate": "npm run build && npm run typeorm -- migration:generate -d ./dist/orm.config.js ./src/migrations/generated-migration && npm run build",
    "db:migrate": "npm run build && npm run typeorm -- migration:run -d ./dist/orm.config.js",
    "db:build-and-migrate": "npm run build && npm run db:run",
    "db:rollback": "npm run build && npm run typeorm -- migration:revert -d ./dist/orm.config.js",
    "cdk": "cdk",
    "seed": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run --dataSource src/seeders/typeorm-data-source.ts",
    "sls:offline": "npm run build && serverless offline"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@nestjs/apollo": "^12.0.11",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.0.11",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.0",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@nestjsx/crud": "4.5.0",
    "@nestjsx/crud-request": "4.5.0",
    "@nestjsx/crud-typeorm": "4.5.0",
    "@types/aws-lambda": "^8.10.147",
    "@vendia/serverless-express": "^4.12.6",
    "aws-lambda": "^1.0.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dataloader": "^2.2.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-subscriptions": "^2.0.0",
    "pg": "^8.11.3",
    "pusher": "^5.2.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.5.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "express": "^4.18.3",
    "jest": "^29.7.0",
    "openapi-fetch": "^0.9.7",
    "prettier": "^3.2.5",
    "serverless": "^4.14.1",
    "serverless-offline": "^14.4.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.0.0",
    "winston": "^3.13.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
